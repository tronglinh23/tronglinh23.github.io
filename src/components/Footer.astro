---
import { site } from '@/config/site';
---

<footer class="border-t border-white/10 bg-black/10">
  <div class="mx-auto flex max-w-6xl flex-col gap-4 px-4 py-10 md:flex-row md:items-center md:justify-between">
    <div class="text-sm text-white/65">
      Â© {new Date().getFullYear()} {site.author.name}. Built with Astro.
    </div>
    <div class="flex flex-wrap gap-2">
      {site.socials.map((s) => (
        <a
          class="rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white/70 hover:bg-white/10 hover:text-white"
          href={s.href}
          target="_blank"
          rel="noreferrer"
        >
          {s.label}
        </a>
      ))}
    </div>
  </div>
</footer>
