---
const { type = 'note', title } = Astro.props;
const styles = {
  note: 'border-white/12 bg-white/5',
  tip: 'border-cyan-300/20 bg-cyan-300/10',
  warning: 'border-amber-300/20 bg-amber-300/10',
  danger: 'border-rose-300/20 bg-rose-300/10',
};
const label = title ?? type.toUpperCase();
---

<div class={`my-6 rounded-3xl border p-5 ${styles[type] ?? styles.note}`}>
  <div class="mb-2 text-xs font-semibold tracking-wide text-white/75">{label}</div>
  <div class="prose prose-invert max-w-none text-sm">
    <slot />
  </div>
</div>
